<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.rustamft.tasksft.ui.screens.list.ListFragment"
        android:label="list_fragment"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_editorFragment"
            app:destination="@id/editorFragment" />
        <action
            android:id="@+id/action_listFragment_to_backupFragment"
            app:destination="@id/backupFragment" />
    </fragment>
    <fragment
        android:id="@+id/editorFragment"
        android:name="com.rustamft.tasksft.ui.screens.editor.EditorFragment"
        android:label="editor_fragment"
        tools:layout="@layout/fragment_editor" />
    <fragment
        android:id="@+id/backupFragment"
        android:name="com.rustamft.tasksft.ui.screens.backup.BackupFragment"
        android:label="fragment_backup"
        tools:layout="@layout/fragment_backup" />
</navigation>