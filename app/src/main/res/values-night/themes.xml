<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TasksFT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_wisteria</item>
        <item name="colorPrimaryVariant">@color/pure_crimson</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_wisteria</item>
        <item name="colorSecondaryVariant">@color/pure_crimson</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="colorBackgroundFloating">@color/dark_blue</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">@color/dark_blue</item>
    </style>

    <!-- Card theme. -->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/dark_blue</item>
    </style>

    <!-- FAB theme. -->
    <style name="FAB" parent="Theme.TasksFT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_fab</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>