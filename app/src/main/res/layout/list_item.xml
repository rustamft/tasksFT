<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.rustamft.tasksft.screens.list.ListViewModel" />

        <variable
            name="task"
            type="com.rustamft.tasksft.database.entity.AppTask" />

        <variable
            name="checked"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardCornerRadius="18dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:shrinkColumns="0"
            android:stretchColumns="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/item_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/checkbox_selector"
                    android:checked="@={checked}"
                    android:maxLines="1"
                    android:onCheckedChanged="@{() -> viewModel.onTaskChecked(task)}"
                    android:onLongClick="@{(view) -> viewModel.navigateNext(view, task.id)}"
                    android:paddingHorizontal="9dp"
                    android:text="@{task.title}"
                    android:textColor="@color/checkbox_selector"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:enabled="@{checked}"
                    android:text="@{viewModel.defineDateTimeText(task)}"
                    android:textColor="@color/textview_selector"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{task.description.empty ? View.GONE : View.VISIBLE}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_span="2"
                    android:enabled="@{checked}"
                    android:maxLines="2"
                    android:padding="9dp"
                    android:text="@{task.description}"
                    android:textColor="@color/textview_selector"
                    android:textSize="14sp" />

            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>
</layout>