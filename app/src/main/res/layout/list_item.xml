<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.rustamft.tasksft.screens.list.ListFragment" />

        <variable
            name="task"
            type="com.rustamft.tasksft.database.entity.AppTask" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardCornerRadius="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingEnd="9dp">

            <CheckBox
                android:id="@+id/item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/item_date_time"
                android:button="@drawable/checkbox_selector"
                android:checked="@={task.isFinished}"
                android:maxLines="2"
                android:onCheckedChanged="@{() -> fragment.onTaskChecked(task)}"
                android:onLongClick="@{() -> fragment.navigateNext(task.id)}"
                android:padding="9dp"
                android:text="@{task.title}"
                android:textColor="@color/checkbox_selector"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/item_checkbox"
                android:layout_alignParentEnd="true"
                android:enabled="@{itemCheckbox.checked}"
                android:text="@{fragment.defineDateTimeText(task)}"
                android:textColor="@color/date_time_selector"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>