<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TasksFT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pure_crimson</item>
        <item name="colorPrimaryVariant">@color/pure_crimson</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pure_crimson</item>
        <item name="colorSecondaryVariant">@color/pure_crimson</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- FAB theme. -->
    <style name="FAB" parent="Theme.TasksFT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_fab</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <!-- TextView theme. -->
    <style name="TextView" parent="Theme.TasksFT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- EditText theme. -->
    <style name="EditText" parent="Theme.TasksFT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:minHeight">@dimen/min_height_standard</item>
    </style>
</resources>